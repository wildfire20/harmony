# Production Environment Variables
NODE_ENV=production
PORT=5000

# IMPORTANT: Change these for production!
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-64-CHARACTER-SECRET-FOR-PRODUCTION
JWT_EXPIRE=7d

# Production Database Configuration
# Replace with your production PostgreSQL credentials
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=harmony_learning_db
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password

# Production App Configuration
FRONTEND_URL=https://your-domain.com
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Headers
CORS_ORIGIN=https://your-domain.com
SESSION_SECRET=CHANGE-THIS-TO-A-STRONG-SESSION-SECRET

# Optional: Email Configuration for notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Optional: Cloud Storage (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=harmony-learning-uploads
AWS_REGION=us-east-1
